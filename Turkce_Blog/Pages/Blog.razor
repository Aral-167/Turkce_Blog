@page "/"
@inherits LayoutComponentBase

<div class="container">
    <header>
        <h1>Merhaba Selin Hocam!</h1>
        <br />
    </header>

    <main>
        @foreach (var post in BlogPosts)
        {
            <article class="blog-post">
                <h2>@post.Title</h2>
                <p class="date">@post.Date.ToShortDateString()</p>
                <div class="image-grid">
                    @foreach (var imageUrl in post.ImageUrls)
                    {
                        <img src="@imageUrl" alt="@post.Title" class="blog-post-image" />
                    }
                </div>
                <p>@post.Content</p>
            </article>
        }
    </main>

    <footer>
        <p><strong>Okuduğunuz için teşekkürler 😊</strong></p>
    </footer>
</div>

